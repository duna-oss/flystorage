{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsdown && npm run patch -ws --if-present",
    "build:only": "tsdown",
    "clean": "rm -rf ./packages/*/dist/",
    "ts": "node --import tsx/esm",
    "lint": "tsc --noEmit --incremental false",
    "test": "npm run lint && npm run vitest",
    "vitest": "vitest run",
    "pack": "npm pack -ws --pack-destination ./packed"
  },
  "workspaces": [
    "./packages/stream-mime-type",
    "./packages/file-storage",
    "./packages/*"
  ],
  "devDependencies": {
    "@swc/core": "^1.15.3",
    "@types/express": "^5.0.5",
    "@types/mime-types": "^3.0.1",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "@vitest/ui": "^4.0.14",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "express": "^5.1.0",
    "node-fetch": "^3.3.2",
    "rimraf": "^6.1.2",
    "tsdown": "^0.15.9",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.14"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
